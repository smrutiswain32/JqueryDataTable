@model  JqueryDatatableExample.Models.EmailMessageModel

@{
    ViewBag.Title = "Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Email</h2>

@using (Html.BeginForm("Email", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td style="width: 80px">To:</td>
            <td>@Html.TextBoxFor(m => m.To, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>Subject:</td>
            <td>@Html.TextBoxFor(m => m.Subject ,new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td valign="top">Body:</td>
            <td>@Html.TextAreaFor(m => m.Body, new { @rows = 10, @cols = 50 ,@class="form-control"})</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>File Attachment:</td>
            <td><input type="file" name="fileuploader" multiple="multiple" /></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>Gmail Email:</td>
            <td>@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>Gmail Password:</td>
            <td>@Html.PasswordFor(m => m.Password, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Send" class="btn btn-primary" /><a class="btn btn-primary" style="margin-left:10%;" href="@Url.Action("Index","Home")">Cancel</a></td>
        </tr>
    </table>
}
<script type="text/javascript">

        var message = "@ViewBag.Message";
        $(function () {
            if (message != "") {
                alert(message);
            }
        });
</script>

